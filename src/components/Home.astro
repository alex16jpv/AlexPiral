<style>
  @font-face {
    font-family: "MS Sans Serif";
    src: local("MS Sans Serif"), local("Microsoft Sans Serif");
    font-weight: normal;
    font-style: normal;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "MS Sans Serif", sans-serif;
    font-size: 11px;
    background: #c0c0c0;
    color: #000;
    line-height: 1.2;
    overflow-x: hidden;
  }

  .desktop {
    min-height: 100vh;
    background: #008080;
    position: relative;
    padding: 20px;
  }

  .window {
    background: #c0c0c0;
    border: 2px outset #c0c0c0;
    margin: 10px auto;
    max-width: 1000px;
    box-shadow: 2px 2px 0px #808080;
  }

  .title-bar {
    background: linear-gradient(90deg, #0000ff 0%, #000080 100%);
    color: white;
    padding: 2px;
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .title-text {
    padding: 2px 6px;
    font-size: 11px;
  }

  .window-controls {
    display: flex;
    gap: 2px;
  }

  .control-btn {
    width: 16px;
    height: 14px;
    background: #c0c0c0;
    border: 1px outset #c0c0c0;
    font-size: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
  }

  .control-btn:active {
    border: 1px inset #c0c0c0;
  }

  .menu-bar {
    background: #c0c0c0;
    border-bottom: 1px solid #808080;
    padding: 4px;
  }

  .menu-item {
    display: inline-block;
    padding: 4px 8px;
    cursor: pointer;
    font-size: 11px;
  }

  .menu-item:hover {
    background: #0000ff;
    color: white;
  }

  .content {
    padding: 20px;
    background: #c0c0c0;
  }

  .header {
    text-align: center;
    margin-bottom: 25px;
    padding: 15px;
    background: #fffbf0;
    border: 2px inset #c0c0c0;
  }

  .header h1 {
    font-size: 18px;
    margin-bottom: 8px;
    color: #000080;
  }

  .header p {
    font-size: 12px;
    line-height: 1.4;
  }

  .toolbar {
    background: #c0c0c0;
    border: 1px solid #808080;
    padding: 8px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .toolbar-label {
    font-weight: bold;
    margin-right: 5px;
  }

  .filter-btn {
    background: #c0c0c0;
    border: 2px outset #c0c0c0;
    padding: 4px 8px;
    font-size: 11px;
    cursor: pointer;
    font-family: inherit;
  }

  .filter-btn:hover {
    background: #d4d4d4;
  }

  .filter-btn:active,
  .filter-btn.active {
    border: 2px inset #c0c0c0;
    background: #a0a0a0;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 25px;
  }

  .product-card {
    background: #c0c0c0;
    border: 2px outset #c0c0c0;
    padding: 0;
    display: flex;
    flex-direction: column;
    box-shadow: 2px 2px 0px #808080;
  }

  .product-header {
    background: linear-gradient(90deg, #800080 0%, #400040 100%);
    color: white;
    padding: 6px 10px;
    font-weight: bold;
    font-size: 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .product-version {
    font-size: 10px;
    opacity: 0.9;
  }

  .product-image {
    height: 120px;
    background: #808080;
    border-bottom: 1px solid #404040;
    overflow: hidden;
    position: relative;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .product-image.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #c0c0c0;
    font-size: 10px;
    text-align: center;
    background: linear-gradient(45deg, #808080 25%, transparent 25%),
      linear-gradient(-45deg, #808080 25%, transparent 25%),
      linear-gradient(45deg, transparent 75%, #808080 75%),
      linear-gradient(-45deg, transparent 75%, #808080 75%);
    background-size: 8px 8px;
    background-position:
      0 0,
      0 4px,
      4px -4px,
      -4px 0px;
  }

  .product-body {
    padding: 12px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .product-description {
    margin-bottom: 12px;
    line-height: 1.4;
    flex: 1;
  }

  .product-features {
    background: #f0f0f0;
    border: 1px inset #c0c0c0;
    padding: 8px;
    margin-bottom: 12px;
    font-size: 10px;
  }

  .product-features h4 {
    font-size: 11px;
    margin-bottom: 4px;
    color: #000080;
  }

  .features-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .features-list li {
    margin-bottom: 2px;
    padding-left: 12px;
    position: relative;
  }

  .features-list li:before {
    content: "‚Ä¢";
    position: absolute;
    left: 0;
    color: #800000;
  }

  .product-footer {
    border-top: 1px solid #808080;
    padding: 10px 12px;
    background: #e0e0e0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .product-price {
    font-weight: bold;
    color: #800000;
    font-size: 12px;
  }

  .product-actions {
    display: flex;
    gap: 8px;
  }

  .btn {
    background: #c0c0c0;
    border: 2px outset #c0c0c0;
    padding: 4px 10px;
    font-size: 11px;
    cursor: pointer;
    font-family: inherit;
  }

  .btn:hover {
    background: #d4d4d4;
  }

  .btn:active {
    border: 2px inset #c0c0c0;
  }

  .btn-primary {
    background: #0000ff;
    color: white;
    border: 2px outset #0000ff;
  }

  .btn-primary:hover {
    background: #0000cc;
  }

  .btn-primary:active {
    border: 2px inset #0000ff;
  }

  .category-tag {
    background: #ffff00;
    border: 1px solid #cccc00;
    padding: 2px 6px;
    font-size: 9px;
    margin-right: 4px;
    display: inline-block;
    margin-bottom: 8px;
  }

  .stats-bar {
    background: #c0c0c0;
    border: 2px inset #c0c0c0;
    padding: 10px;
    margin-bottom: 20px;
    display: flex;
    justify-content: space-around;
    text-align: center;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-number {
    font-size: 16px;
    font-weight: bold;
    color: #000080;
  }

  .stat-label {
    font-size: 10px;
    color: #666;
  }

  .taskbar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 30px;
    background: #c0c0c0;
    border-top: 1px solid #808080;
    display: flex;
    align-items: center;
    padding: 2px;
    box-shadow: 0 -1px 0 #fff inset;
  }

  .start-btn {
    background: #c0c0c0;
    border: 2px outset #c0c0c0;
    padding: 4px 8px;
    font-size: 11px;
    font-weight: bold;
    cursor: pointer;
    margin-right: 10px;
  }

  .start-btn:active {
    border: 2px inset #c0c0c0;
  }

  .taskbar-item {
    background: #c0c0c0;
    border: 2px inset #c0c0c0;
    padding: 4px 8px;
    font-size: 11px;
    margin-right: 5px;
    flex: 1;
    max-width: 150px;
  }

  .time {
    margin-left: auto;
    padding: 4px 8px;
    border: 1px inset #c0c0c0;
    font-size: 11px;
  }

  @media (max-width: 768px) {
    .desktop {
      padding: 10px;
    }

    .products-grid {
      grid-template-columns: 1fr;
    }

    .toolbar {
      flex-wrap: wrap;
    }

    .stats-bar {
      flex-direction: column;
      gap: 10px;
    }
  }
</style>

