---
import type { Project } from "../types";

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;

// Sort projects to show non-WIP first, then by most recent
const sortedProjects = projects.sort((a, b) => {
  if (a.isWIP !== b.isWIP) {
    return a.isWIP ? 1 : -1;
  }
  return a.id.localeCompare(b.id);
});

const getProjectImageSrc = (image?: string) => {
  return image || "/images/project-placeholder.svg";
};
---

<section class="projects" id="projects">
  <div class="container">
    <header class="section-header">
      <h2 class="section-title">Personal Projects</h2>
      <p class="section-description">
        A showcase of my personal projects demonstrating various technologies
        and problem-solving approaches.
      </p>
    </header>

    <div class="projects-grid">
      {
        sortedProjects.map((project) => (
          <article class="project-card">
            <div class="project-image-container">
              <img
                src={getProjectImageSrc(project.image)}
                alt={`${project.title} preview`}
                class="project-image"
                loading="lazy"
                width="400"
                height="200"
              />
              {project.isWIP && (
                <div class="wip-badge" aria-label="Work in Progress">
                  <svg
                    class="wip-icon"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                  </svg>
                  WIP
                </div>
              )}
            </div>

            <div class="project-content">
              <div class="project-header">
                <h3 class="project-title">{project.title}</h3>
              </div>
              
              <div class="project-actions">
                <a
                  href={project.githubUrl}
                  class="action-button primary"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`View ${project.title} source code on GitHub`}
                >
                  <svg
                    class="action-icon"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                  Code
                </a>
                {project.liveUrl && (
                  <a
                    href={project.liveUrl}
                    class="action-button secondary"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={`View ${project.title} live demo`}
                  >
                    <svg
                      class="action-icon"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path d="M14,3V5H17.59L7.76,14.83L9.17,16.24L19,6.41V10H21V3M19,19H5V5H12V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V12H19V19Z" />
                    </svg>
                    Live Demo
                  </a>
                )}
              </div>

              <p class="project-description">{project.description}</p>

              {project.technologies.length > 0 && (
                <div class="project-technologies">
                  <h4 class="tech-title">Built with:</h4>
                  <ul class="tech-list">
                    {project.technologies.map((tech, index) => (
                      <li class="tech-item">
                        {tech}
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .projects {
    background: var(--color-background);
    padding: var(--space-16) 0;
  }

  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .section-title {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .section-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
    max-width: 400px;
    margin: 0 auto;
  }

  .project-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-sm);
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .project-image-container {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: var(--color-border);
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .project-image {
    transform: scale(1.05);
  }

  .wip-badge {
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
    background: var(--color-warning);
    color: white;
    padding: var(--space-1) var(--space-2);
    border-radius: var(--border-radius);
    font-size: var(--font-size-xs);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: var(--space-1);
    box-shadow: var(--shadow);
  }

  .wip-icon {
    width: 12px;
    height: 12px;
  }

  .project-content {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    height: calc(100% - 200px);
  }

  .project-header {
    margin-bottom: var(--space-3);
  }

  .project-title {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
    margin: 0;
  }

  .project-actions {
    display: flex;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .action-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--border-radius);
    text-decoration: none;
    font-size: var(--font-size-sm);
    font-weight: 500;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .action-button.primary {
    background: var(--color-text);
    color: var(--color-background);
  }

  .action-button.primary:hover {
    background: var(--color-primary-dark);
    color: var(--color-background);
    transform: translateY(-1px);
    box-shadow: var(--shadow);
  }

  .action-button.secondary {
    background: transparent;
    color: var(--color-text);
    border-color: var(--color-border);
  }

  .action-button.secondary:hover {
    background: var(--color-surface);
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-1px);
  }

  .action-icon {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }

  .project-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    flex: 1;
  }

  .project-technologies {
    margin-top: auto;
  }

  .tech-title {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    list-style: none;
  }

  .tech-item {
    background: var(--color-background);
    color: var(--color-text);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--border-radius);
    font-size: var(--font-size-xs);
    font-weight: 500;
    border: 1px solid var(--color-border);
  }

  @media (min-width: 640px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
      max-width: none;
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 639px) {
    .project-actions {
      flex-direction: column;
    }

    .action-button {
      justify-content: center;
    }
  }
</style>
